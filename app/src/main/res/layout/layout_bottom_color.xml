<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/btn_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_margin="20dp"
        android:text="X"
        android:textSize="20sp"/>


    <TextView
        android:id="@+id/bottom_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:background="@drawable/color_circle_red"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#454343"/>

    <TextView
        android:id="@+id/bottom_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/color_circle_blue"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#454343"/>

    <TextView
        android:id="@+id/bottom_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/color_circle_green"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#454343"/>

    <TextView
        android:id="@+id/bottom_yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/color_circle_yellow"/>



</LinearLayout>